extends layout

block content

  h1 Staff: #{staff.name}

  div(style='margin-left:20px;margin-top:20px')

    h2(style='font-size: 1.5rem;') Books
    if genre_books.length
      dl
        each book in genre_books
          dt
            a(href=book.url) #{book.title}
          dd #{book.summary}
    else
      p This staff has no books.

  hr
  p
    a(href=staff.url+'/delete') Delete staff
  p
    a(href=staff.url+'/update') Update staff